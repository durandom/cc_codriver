{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "map-to-cc-csv",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--map-to-cc-csv",
            "--codriver", "bollinger"]
        },
        {
            "name": "map-to-cc out/copilot",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--map-to-cc", "build/copilot"]
        },
        {
            "name": "rbr-list-csv",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--rbr-list-csv"]
        }
    ]
}