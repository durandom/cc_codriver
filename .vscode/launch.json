    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "map-to-cc-csv",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--map-to-cc-csv", "--codriver", "bollinger"]
        },
        {
            "name": "create-codriver out/codriver Bollinger",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--create-codriver", "build/codriver_David Bollinger"]
        },
        {
            "name": "rbr-list-csv",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--rbr-list-csv", "--codriver", "bollinger"]
        },
        {
            "name": "roadbook-csv",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            "args": ["--roadbook-csv"]
        },
        {
            "name": "roadbook-csv stage",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            // "args": ["--roadbook-csv", "--roadbook-name", "Ahvenus I_Luppis_20230228.ini"]
            "args": ["--roadbook-csv", "--roadbook-name", "Alpes Rally 20220921_LUPPIS.ini"]
        },
        {
            "name": "roadbook-csv Alpes*",
            "type": "debugpy",
            "request": "launch",
            "program": "codriver.py",
            "console": "integratedTerminal",
            // "args": ["--roadbook-csv", "--roadbook-name", "Ahvenus I_Luppis_20230228.ini"]
            "args": ["--roadbook-csv", "--roadbook-name", "/^Alpes.*/"]
        },
    ]
}